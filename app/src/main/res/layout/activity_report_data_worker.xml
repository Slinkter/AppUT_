<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Main.ReportDataWorkerActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"

            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Generar Reporte"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_h1"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:onClick="btn_entrada_pdf"
                    app:cardCornerRadius="@dimen/cardRadiusAll"
                    app:cardElevation="@dimen/card_elevation"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:onClick="btn_entrada_pdf"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <ImageView
                            android:layout_width="@dimen/img_width_card"
                            android:layout_height="@dimen/img_height_card"
                            android:src="@drawable/ic_pdf" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="4"
                            android:fontFamily="@font/headland_one"
                            android:gravity="center"
                            android:text="Horario\nEntrada"
                            android:textSize="@dimen/textmedium" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:onClick="btn_salida_pdf"
                    app:cardCornerRadius="@dimen/cardRadiusAll"
                    app:cardElevation="@dimen/card_elevation"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:onClick="btn_salida_pdf"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <ImageView
                            android:layout_width="@dimen/img_width_card"
                            android:layout_height="@dimen/img_height_card"
                            android:src="@drawable/ic_pdf" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="4"
                            android:fontFamily="@font/headland_one"
                            android:gravity="center"
                            android:text="Horario\nSalida"
                            android:textSize="@dimen/textmedium" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:onClick="btn_worker_pdf"
                    app:cardCornerRadius="@dimen/cardRadiusAll"
                    app:cardElevation="@dimen/card_elevation"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:onClick="btn_worker_pdf"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:weightSum="5">

                        <ImageView
                            android:layout_width="@dimen/img_width_card"
                            android:layout_height="@dimen/img_height_card"
                            android:src="@drawable/ic_pdf" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="4"
                            android:fontFamily="@font/headland_one"
                            android:gravity="center"
                            android:text="Historial\nTrabajador"
                            android:textSize="@dimen/textmedium" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:onClick="btn_test_fast"
                    app:cardCornerRadius="@dimen/cardRadiusAll"
                    app:cardElevation="@dimen/card_elevation"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:weightSum="5">

                        <ImageView
                            android:layout_width="@dimen/img_width_card"
                            android:layout_height="@dimen/img_height_card"
                            android:src="@drawable/ic_pdf" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="4"
                            android:fontFamily="@font/headland_one"
                            android:gravity="center"
                            android:text="Prueba\nRÃ¡pida"
                            android:textSize="@dimen/textmedium" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</LinearLayout>