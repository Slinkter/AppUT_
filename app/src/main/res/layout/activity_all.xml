<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Main.AllActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/allmain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Bienvenido"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_h1"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_currentuser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Usuario"
                android:textSize="@dimen/text_size_h3"
                android:textStyle="normal" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:onClick="btnAddWorker"
                    app:cardCornerRadius="@dimen/cardRadiusAll"
                    app:cardElevation="@dimen/card_elevation"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_cv_linear"
                        android:layout_marginTop="@dimen/mt_card_all"
                        android:layout_marginBottom="@dimen/mb_card_all"
                        android:gravity="center"
                        android:onClick="btnAddWorker"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="@dimen/img_width_card"
                            android:layout_height="@dimen/img_height_card"
                            android:layout_weight="1"
                            android:baselineAligned="false"
                            android:src="@drawable/ic_profile" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Crear\nEmpleado"
                            android:textSize="@dimen/text_size_h3"
                            android:textStyle="bold" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:onClick="btnInputData"
                    app:cardCornerRadius="@dimen/cardRadiusAll"
                    app:cardElevation="@dimen/card_elevation"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_cv_linear"
                        android:layout_marginTop="@dimen/mt_card_all"
                        android:layout_marginBottom="@dimen/mb_card_all"
                        android:gravity="center"
                        android:onClick="btnInputData"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/img_width_card"
                            android:layout_height="@dimen/img_height_card"
                            android:layout_weight="1"
                            android:baselineAligned="false"
                            android:src="@drawable/ic_agenda" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Registrar\nSÃ­ntomas"
                            android:textSize="@dimen/text_size_h3"
                            android:textStyle="bold" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:onClick="btnReportData"
                    app:cardCornerRadius="@dimen/cardRadiusAll"
                    app:cardElevation="@dimen/card_elevation"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_cv_linear"
                        android:layout_marginTop="@dimen/mt_card_all"
                        android:layout_marginBottom="@dimen/mb_card_all"
                        android:gravity="center"
                        android:onClick="btnReportData"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="@dimen/img_width_card"
                            android:layout_height="@dimen/img_height_card"
                            android:layout_weight="1"
                            android:baselineAligned="false"
                            android:src="@drawable/ic_pdf" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Generar\nReporte"
                            android:textSize="@dimen/text_size_h3"
                            android:textStyle="bold" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:onClick="btnVisualData"
                    app:cardCornerRadius="@dimen/cardRadiusAll"
                    app:cardElevation="@dimen/card_elevation"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_cv_linear"
                        android:layout_marginTop="@dimen/mt_card_all"
                        android:layout_marginBottom="@dimen/mb_card_all"
                        android:gravity="center"
                        android:onClick="btnVisualData"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="@dimen/img_width_card"
                            android:layout_height="@dimen/img_height_card"
                            android:layout_weight="1"
                            android:baselineAligned="false"
                            android:src="@drawable/ic_chart" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Visualizar\nDatos"
                            android:textSize="@dimen/text_size_h3"
                            android:textStyle="bold" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:onClick="btnDeleteWorker"
                    app:cardCornerRadius="@dimen/cardRadiusAll"
                    app:cardElevation="@dimen/card_elevation"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_cv_linear"
                        android:layout_marginTop="@dimen/mt_card_all"
                        android:layout_marginBottom="@dimen/mb_card_all"
                        android:gravity="center"
                        android:onClick="btnDeleteWorker"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="@dimen/img_width_card"
                            android:layout_height="@dimen/img_height_card"
                            android:layout_weight="1"
                            android:baselineAligned="false"
                            android:src="@drawable/ic_dardebaja" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Editar\nEmpleado"
                            android:textSize="@dimen/text_size_h3"
                            android:textStyle="bold" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:onClick="btnDeleteWorker"
                    android:visibility="invisible"
                    app:cardCornerRadius="@dimen/cardRadiusAll"
                    app:cardElevation="@dimen/card_elevation"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/mt_card_all"
                        android:layout_marginBottom="@dimen/mb_card_all"
                        android:gravity="center"
                        android:onClick="btnDeleteWorker"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="@dimen/img_width_card"
                            android:layout_height="@dimen/img_height_card"
                            android:layout_weight="1"
                            android:baselineAligned="false"
                            android:src="@drawable/ic_dardebaja" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Editar\nEmpleado"
                            android:textSize="@dimen/text_size_h3"
                            android:textStyle="bold" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_selectedunidadminera"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:gravity="center"
                    android:text="UNIDAD DE TRABAJO"
                    android:textSize="@dimen/text_size_h3"
                    android:textStyle="bold" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="UNIDAD DE TRABAJO"
                    android:textColor="@color/colorAccent"
                    android:textSize="10dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>